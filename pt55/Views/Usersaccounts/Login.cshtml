<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/css/log.css" rel="stylesheet" />

</head>
<body >
    
    <div class="login-container" >
        <div class="login-form">
            <h2>Login</h2>

            <form asp-action="Login">
                <div class="form-group">
                    <label for="username">UsernameDDDDDDDDDDD</label>
                    <input name="na" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input name="pa" type="password" class="form-control" /> <br />
                </div>
                <input type="submit" value="Login" class="btn btn-primary" />
            </form>
            <p class="error-message">@ViewData["message"]</p>
            <p class="create-account">Don't have an account? <a asp-action="Create" class="create-link">Create one</a></p>
        </div>
    </div>
</body>
</html>




